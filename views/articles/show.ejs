<% layout('./layouts/boilerplate') %>

    <div class="article-show-container">
        <!-- Article Title -->
        <h1 class="article-show-title">
            <%= article.title %>
        </h1>
        
        <!-- Author Information -->
        <% if (article.author) { %>
            <div class="article-author">
                <p>By <strong><%= article.author.firstName %> <%= article.author.lastName %></strong></p>
                <p class="article-date">Published on <%= article.createdAt ? article.createdAt.toLocaleDateString() : 'Recently' %></p>
            </div>
        <% } %>

        <!-- Article Image -->
        <% if (article.image && article.image.url) { %>
            <div class="article-show-image">
                <img src="<%= article.image.url %>" alt="<%= article.title %>">
            </div>
            <% } %>

                <!-- Article Content -->
                <div class="article-show-description">
                    <p>
                        <%= article.description %>
                    </p>
                </div>

                <!-- Actions -->
                <div class="article-show-actions">
                    <% if (currentUser && article.author && currentUser._id.equals(article.author._id)) { %>
                        <div class="action-group">
                            <a href="/articles/<%= article._id %>/edit" class="btn-primary">Edit</a>
                            <form action="/articles/<%= article._id %>?_method=DELETE" method="post">
                                <button type="submit" class="btn-delete">Delete</button>
                            </form>
                        </div>
                    <% } %>
                    <a href="/" class="btn-primary">‚Üê Back</a>
                </div>
    </div>